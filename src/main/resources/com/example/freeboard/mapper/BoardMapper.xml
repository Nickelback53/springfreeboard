<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.example.freeboard.mapper.BoardMapper">


    <select id="boardCount" resultType="com.example.freeboard.domain.Pagination">
        SELECT count(boardId) AS cnt FROM tbl_board
    </select>

    <select id="getList" resultType="com.example.freeboard.domain.Board">
        SELECT
            *
        FROM tbl_board  order by boardid limit (#{curPage}-1)*#{pageSize},#{pageSize} //  게시글 리스트 반환
    </select>

    <select id="getBoard" parameterType="Long" resultType="com.example.freeboard.domain.Board">
        SELECT
            *
        FROM tbl_board where boardId=#{boardId};
    </select>

    <insert id="uploadBoard" parameterType="com.example.freeboard.domain.Board">
        INSERT INTO tbl_board (title, content, name)
        VALUES
            (#{title}, #{content}, #{name});
    </insert>


    <update id="updateBoard" parameterType="com.example.freeboard.domain.Board">
        UPDATE tbl_board
        SET title=#{title}, content=#{content}
        WHERE boardId=#{boardId};
    </update>

    <delete id="deleteBoard" parameterType="Long">
        DELETE
        FROM tbl_board
        WHERE boardId=#{boardId};
    </delete>

    <update id="viewCount">
        UPDATE tbl_board
        SET read = read + 1
        WHERE boardId=#{boardId};
    </update>
</mapper>